[init]
	defaultBranch = main
[user]
	email = 003.sjc@gmail.com
	name = Sam Cooper
[core]
	editor = nvim
	excludesFile = /Users/samcooper/.gitignore_global
[fetch]
	prune = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[diff]
    tool = kitty
    guitool = kitty.gui
[difftool]
    prompt = false
    trustExitCode = true
[difftool "kitty"]
    cmd = kitty +kitten diff $LOCAL $REMOTE
[difftool "kitty.gui"]
    cmd = kitty kitty +kitten diff $LOCAL $REMOTE
[alias]
    f = fetch
    co = checkout
    cb = checkout -b
    m = merge
    l = pull
    a = add
    A = add -A
    c = commit -m
    cam = commit -a -m
    ca = commit --amend
    p = push
    st = stash
    stl = stash list
    stp = stash pop
